#!/bin/bash
##### Script to reset all Servers
source /acpc/adm/bin/resetutil
source /acpc/adm/bin/getSettings
### Test PC2
RES=`resetHost pc2`
echo "$RES"
### Test web
WEBCOUNT=`getWebMAC|wc -l`
if [ $WEBCOUNT -eq 1 ]
then
 RES=`resetHost web`
 echo "$RES"
else
 resetLoop "web" $WEBCOUNT
fi
### Test Judges
JUDGECOUNT=`getJudgeMAC|wc -l`
if [ $JUDGECOUNT -eq 1 ]
then
 RES=`resetHost judge`
 echo "$RES"
else
 resetLoop "judge" $JUDGECOUNT
fi
### Test Printers
PRINTCOUNT=`getPrintMAC|wc -l`
if [ $PRINTCOUNT -eq 1 ]
then
 RES=`resetHost print`
 echo "$RES"
else
 resetLoop "print" $PRINTCOUNT
fi
